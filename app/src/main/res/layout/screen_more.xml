<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtVersionCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:gravity="center"
            tools:text="v1.1.2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSettings"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/big_margin"
            android:background="@color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/settings"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:background="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtExportToCsv"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/big_margin"
            android:background="@color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/export_csv"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:background="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtImportFromCsv"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/big_margin"
            android:background="@color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/import_csv"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtImportFromCsvSubtitle"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:layout_marginBottom="@dimen/big_margin"
            android:background="@color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/import_csv_subtitle"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:background="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtLicenses"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/big_margin"
            android:background="@color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/licenses"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:background="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSourceCode"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/big_margin"
            android:background="@color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/sourceCodeOnGithub"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:background="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtIssueTracker"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_margin"
            android:background="@color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/openAnIssue"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>