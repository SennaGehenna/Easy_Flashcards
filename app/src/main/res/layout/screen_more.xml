<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_margin"
        android:text="@string/enableDarkMode"
        android:textColor="@color/textColor"
        android:visibility="gone"
        tools:checked="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:background="@color/colorAccent"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtExportToCsv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/big_margin"
        android:background="@color/transparent"
        android:gravity="start|center_vertical"
        android:text="@string/export_csv"
        android:textColor="@color/colorAccent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:background="@color/colorAccent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtLicenses"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/big_margin"
        android:background="@color/transparent"
        android:gravity="start|center_vertical"
        android:text="@string/licenses"
        android:textColor="@color/textColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:background="@color/colorAccent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSourceCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/big_margin"
        android:background="@color/transparent"
        android:gravity="start|center_vertical"
        android:text="@string/sourceCodeOnGithub"
        android:textColor="@color/textColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:background="@color/colorAccent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtIssueTracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_margin"
        android:background="@color/transparent"
        android:gravity="start|center_vertical"
        android:text="@string/openAnIssue"
        android:textColor="@color/textColor" />


</LinearLayout>